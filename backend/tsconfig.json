{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@types/*": ["./src/types/*"],
      "@scripts/*": ["./src/scripts/*"]
    },
    "types": ["node", "express"]
  },
  "include": [
    "src/**/*",
    "src/types/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
