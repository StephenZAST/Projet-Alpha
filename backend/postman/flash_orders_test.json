{
  "info": {
    "name": "Flash Orders Test",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login Admin",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"newemail@example.com\",\n    \"password\": \"superadminpassword\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": "{{baseUrl}}/api/auth/login"
      }
    },
    {
      "name": "Get Draft Flash Orders",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": "{{baseUrl}}/api/orders/flash/draft"
      }
    }
  ]
}
