          }
        ],
        "url": {
          "raw": "{{baseUrl}}/orders/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx",
          "host": ["{{baseUrl}}"],
          "path": ["orders", "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"]
