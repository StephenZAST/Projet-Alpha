{
  "info": {
    "name": "22 Alpha Laundry - Commission Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Auth",
      "item": [
        {
          "name": "Login as Affiliate",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "pm.environment.set('affiliateToken', response.token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"affiliate.test@alphaomedia.com\",\n  \"password\": \"affiliate123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Login as Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "pm.environment.set('adminToken', response.token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@alphaomedia.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Affiliate Profile",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{affiliateToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/affiliate/profile",
              "host": ["{{baseUrl}}"],
              "path": ["affiliate", "profile"]
            }
          }
        },
        {
          "name": "Get Commissions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{affiliateToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/affiliate/commissions",
              "host": ["{{baseUrl}}"],
              "path": ["affiliate", "commissions"]
            }
          }
        },
        {
          "name": "Get Current Level",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{affiliateToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/affiliate/current-level",
              "host": ["{{baseUrl}}"],
              "path": ["affiliate", "current-level"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Commission Management",
      "item": [
        {
          "name": "Request Withdrawal",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{affiliateToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 25000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/affiliate/withdrawal",
              "host": ["{{baseUrl}}"],
              "path": ["affiliate", "withdrawal"]
            }
          }
        },
        {
          "name": "Get Withdrawals",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{affiliateToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/affiliate/withdrawals?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["affiliate", "withdrawals"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "4. Admin Management",
      "item": [
        {
          "name": "List All Withdrawals",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/affiliate/admin/withdrawals?status=PENDING",
              "host": ["{{baseUrl}}"],
              "path": ["affiliate", "admin", "withdrawals"],
              "query": [
                {
                  "key": "status",
                  "value": "PENDING"
                }
              ]
            }
          }
        },
        {
          "name": "Approve Withdrawal",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/affiliate/admin/withdrawals/:id/approve",
              "host": ["{{baseUrl}}"],
              "path": ["affiliate", "admin", "withdrawals", ":id", "approve"],
              "variable": [
                {
                  "key": "id",
                  "value": "withdrawal-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Reject Withdrawal",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Documentation insuffisante\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/affiliate/admin/withdrawals/:id/reject",
              "host": ["{{baseUrl}}"],
              "path": ["affiliate", "admin", "withdrawals", ":id", "reject"],
              "variable": [
                {
                  "key": "id",
                  "value": "withdrawal-id-here"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}