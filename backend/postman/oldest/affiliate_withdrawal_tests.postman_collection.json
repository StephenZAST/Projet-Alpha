{
  "info": {
    "name": "23 Alpha Laundry - Withdrawal Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Login as Affiliate",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "pm.environment.set('affiliateToken', response.token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"affiliate.test@alphaomedia.com\",\n  \"password\": \"affiliate123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Login as Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "pm.environment.set('adminToken', response.token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin.test@alphaomedia.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Workflow Tests",
      "item": [
        {
          "name": "1. Request Withdrawal (Below Minimum)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{affiliateToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 20000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/affiliate/withdrawal",
              "host": ["{{baseUrl}}"],
              "path": ["affiliate", "withdrawal"]
            }
          }
        },
        {
          "name": "2. Request Valid Withdrawal",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "pm.environment.set('withdrawalId', response.data.id);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{affiliateToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 50000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/affiliate/withdrawal",
              "host": ["{{baseUrl}}"],
              "path": ["affiliate", "withdrawal"]
            }
          }
        },
        {
          "name": "3. Admin Views Pending Withdrawals",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/affiliate/admin/withdrawals?status=PENDING",
              "host": ["{{baseUrl}}"],
              "path": ["affiliate", "admin", "withdrawals"],
              "query": [
                {
                  "key": "status",
                  "value": "PENDING"
                }
              ]
            }
          }
        },
        {
          "name": "4. Admin Rejects Withdrawal",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Document manquant\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/affiliate/admin/withdrawals/{{withdrawalId}}/reject",
              "host": ["{{baseUrl}}"],
              "path": ["affiliate", "admin", "withdrawals", "{{withdrawalId}}", "reject"]
            }
          }
        },
        {
          "name": "5. Request Another Withdrawal",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "pm.environment.set('withdrawalId', response.data.id);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{affiliateToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 50000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/affiliate/withdrawal",
              "host": ["{{baseUrl}}"],
              "path": ["affiliate", "withdrawal"]
            }
          }
        },
        {
          "name": "6. Admin Approves Withdrawal",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/affiliate/admin/withdrawals/{{withdrawalId}}/approve",
              "host": ["{{baseUrl}}"],
              "path": ["affiliate", "admin", "withdrawals", "{{withdrawalId}}", "approve"]
            }
          }
        },
        {
          "name": "7. View Updated Profile Balance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{affiliateToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/affiliate/profile",
              "host": ["{{baseUrl}}"],
              "path": ["affiliate", "profile"]
            }
          }
        }
      ]
    }
  ]
}