{
  "info": {
    "name": "Alpha Services Management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Admin Auth",
      "item": [
        {
          "name": "Login Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"zasteph300@gmail.com\",\n    \"password\": \"superadminpassword\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/login"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.token) {",
                  "    pm.environment.set(\"token\", jsonData.data.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "2. Service Types",
      "item": [
        {
          "name": "Create Service Type",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"WASHING\",\n    \"description\": \"Service de lavage standard\",\n    \"is_active\": true,\n    \"is_default\": false\n}"
            },
            "url": "{{baseUrl}}/api/service-types"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.id) {",
                  "    pm.environment.set(\"serviceTypeId\", jsonData.data.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "List Service Types",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/service-types"
          }
        },
        {
          "name": "Update Service Type",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"WASHING PREMIUM\",\n    \"is_active\": true\n}"
            },
            "url": "{{baseUrl}}/api/service-types/{{serviceTypeId}}"
          }
        }
      ]
    },
    {
      "name": "3. Weight Pricing",
      "item": [
        {
          "name": "Set Weight Price",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"service_type_id\": \"{{serviceTypeId}}\",\n    \"min_weight\": 0,\n    \"max_weight\": 5,\n    \"price_per_kg\": 1000\n}"
            },
            "url": "{{baseUrl}}/api/weight-pricing"
          }
        },
        {
          "name": "Calculate Price",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"service_type_id\": \"{{serviceTypeId}}\",\n    \"weight\": 3.5\n}"
            },
            "url": "{{baseUrl}}/api/weight-pricing/calculate"
          }
        }
      ]
    },
    {
      "name": "4. Article Services",
      "item": [
        {
          "name": "Set Price Configuration",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"article_id\": \"{{articleId}}\",\n    \"service_type_id\": \"{{serviceTypeId}}\",\n    \"base_price\": 1000,\n    \"premium_price\": 1500,\n    \"price_per_kg\": 200\n}"
            },
            "url": "{{baseUrl}}/api/article-services/prices"
          }
        },
        {
          "name": "Get Article Prices",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/article-services/{{articleId}}/prices"
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "pm.test(\"Status code is 200 or 201\", function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
          "});"
        ]
      }
    }
  ]
}
