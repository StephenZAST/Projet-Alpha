{
  "info": {
    "name": "Alpha - Test Pagination Commandes",
    "description": "Test du endpoint /orders avec pagination et vérification du champ total.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Liste des commandes (pagination)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/orders?page=1&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["orders"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "10" }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code est 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"La réponse contient le champ total\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.total).to.exist;",
              "    pm.expect(jsonData.total).to.be.a('number');",
              "    pm.expect(jsonData.data).to.be.an('array');",
              "    pm.expect(jsonData.page).to.exist;",
              "    pm.expect(jsonData.limit).to.exist;",
              "    pm.expect(jsonData.totalPages).to.exist;",
              "});"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001/api",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "<A REMPLACER PAR VOTRE TOKEN>",
      "type": "string"
    }
  ]
}
