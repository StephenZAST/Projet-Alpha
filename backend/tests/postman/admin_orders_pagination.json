{
  "info": {
    "name": "Admin Orders Pagination Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Paginated Orders",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/admin/orders?page=1&limit=50&sort=created_at:desc",
          "host": ["{{baseUrl}}"],
          "path": ["api", "admin", "orders"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "50"
            },
            {
              "key": "sort",
              "value": "created_at:desc"
            }
          ]
        }
      }
    },
    {
      "name": "Get Orders By Status",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/admin/orders?page=1&limit=50&status=PENDING",
          "host": ["{{baseUrl}}"],
          "path": ["api", "admin", "orders"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "50"
            },
            {
              "key": "status",
              "value": "PENDING"
            }
          ]
        }
      }
    },
    {
      "name": "Get Orders with Custom Sort",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/admin/orders?page=1&limit=10&sort=totalAmount:desc",
          "host": ["{{baseUrl}}"],
          "path": ["api", "admin", "orders"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "sort",
              "value": "totalAmount:desc"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "votre_token_jwt_ici",
      "type": "string"
    }
  ],
  "event": [
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "pm.test(\"Status code is 200\", function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "",
          "pm.test(\"Response has correct structure\", function () {",
          "    const jsonData = pm.response.json();",
          "    pm.expect(jsonData).to.have.property('success');",
          "    pm.expect(jsonData).to.have.property('data');",
          "    pm.expect(jsonData).to.have.property('pagination');",
          "});"
        ]
      }
    }
  ]
}
